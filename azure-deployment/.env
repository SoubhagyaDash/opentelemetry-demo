# Azure Environment Variables Configuration
# Source this file before running the deployment scripts

# Azure Configuration
export AZURE_SUBSCRIPTION_ID="your-subscription-id-here"
export AZURE_TENANT_ID="your-tenant-id-here"
export AZURE_RESOURCE_GROUP="otel-demo-rg"
export AZURE_LOCATION="East US 2"

# Project Configuration
export PROJECT_NAME="otel-demo"
export ENVIRONMENT="dev"
export DEPLOYMENT_NAME="otel-demo-deployment"

# AKS Configuration
export AKS_CLUSTER_NAME="${PROJECT_NAME}-aks-${ENVIRONMENT}"
export AKS_NODE_COUNT="3"
export AKS_NODE_VM_SIZE="Standard_D4s_v3"

# Container Registry Configuration
export ACR_NAME="${PROJECT_NAME}acr$(openssl rand -hex 3)"
export ACR_SKU="Basic"

# Monitoring Configuration
export LOG_ANALYTICS_WORKSPACE="${PROJECT_NAME}-logs-${ENVIRONMENT}"
export APP_INSIGHTS_NAME="${PROJECT_NAME}-insights-${ENVIRONMENT}"

# Security Configuration
export KEY_VAULT_NAME="${PROJECT_NAME}-kv-$(openssl rand -hex 3)"
export MANAGED_IDENTITY_NAME="${PROJECT_NAME}-identity-${ENVIRONMENT}"

# Network Configuration
export VNET_NAME="${PROJECT_NAME}-vnet-${ENVIRONMENT}"
export SUBNET_NAME="aks-subnet"
export VNET_ADDRESS_PREFIX="10.0.0.0/16"
export SUBNET_ADDRESS_PREFIX="10.0.1.0/24"

# Application Configuration
export OTEL_NAMESPACE="otel-demo"
export FRONTEND_PORT="8080"
export GRAFANA_PORT="3000"
export JAEGER_PORT="16686"
export PROMETHEUS_PORT="9090"

# Tags
export TAGS_ENVIRONMENT="${ENVIRONMENT}"
export TAGS_PROJECT="${PROJECT_NAME}"
export TAGS_APPLICATION="OpenTelemetry-Demo"
export TAGS_OWNER="DevOps-Team"
export TAGS_COST_CENTER="Engineering"

# EventHub Configuration (for Kafka replacement)
export EVENTHUB_NAMESPACE="${PROJECT_NAME}-eventhub-${ENVIRONMENT}"
export EVENTHUB_NAME="otel-events"
export EVENTHUB_SKU="Standard"
export EVENTHUB_THROUGHPUT_UNITS="2"

echo "Environment variables loaded for OpenTelemetry Demo Azure deployment"
echo "Resource Group: $AZURE_RESOURCE_GROUP"
echo "Location: $AZURE_LOCATION"
echo "AKS Cluster: $AKS_CLUSTER_NAME"
